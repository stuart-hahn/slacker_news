<%= form_with model: @link, local: true do |f| %>
<%= render '/shared/errors', object: @link %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :url %>
    <%= f.url_field :url %>

    <%= f.text_field :category_title, list: "categories_autocomplete" %>
    <datalist id="categories_autocomplete">
        <% Category.all.each do |category| %>
            <option value="<%= category.title %>">
        <% end %>
    </datalist>

    <%= f.submit %>
<% end %>